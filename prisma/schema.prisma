generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  passwordHash  String
  createdAt     DateTime  @default(now())
  sessions      AnalysisSession[]
}

model AnalysisSession {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  question      String
  status        String    @default("pending") // pending, running, completed, error
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  agentResults  AgentResult[]
  metaSynthesis MetaSynthesis?
}

model AgentResult {
  id            String    @id @default(cuid())
  sessionId     String
  session       AnalysisSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  agentType     String    // debate, temporal, redteam, paradox, firstprinciples
  content       String    // Markdown content
  status        String    @default("pending") // pending, running, completed, error
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model MetaSynthesis {
  id            String    @id @default(cuid())
  sessionId     String    @unique
  session       AnalysisSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  content       String    // Markdown content
  createdAt     DateTime  @default(now())
}
